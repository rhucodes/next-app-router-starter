{
    "extends": ["next", "next/core-web-vitals", "eslint:recommended"],
    "globals": {
        "React": "readonly"
    },
    "rules": {
        "no-unused-vars": [
            1,
            {
                "args": "after-used",
                "argsIgnorePattern": "^_"
            }
        ],
        // "quotes": ["error", "single"],
        // "jsx-quotes": ["error", "prefer-single"],
        "semi": ["error", "never"]
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    }
}
